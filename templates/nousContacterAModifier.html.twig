<section id="contact">
    <div class="container">
        <div class="row">
            <h3>Contact</h3>
            <div class="col-sm-8 col-sm-push-2 col-xs-10 col-xs-push-1">
                <form id="inscription" class="form-horizontal" data-toggle="validator">

                    <!-- Nom -->
                    <div class="form-group">
                        <div class="col-xs-6">
                            <input id="nom" name="nom" type="text" placeholder="Nom" class="form-control input-md">
                        </div>
                    </div>

                    <!-- Adresse -->
                    <div class="form-group">
                        <div class="col-xs-6">
                            <input id="adresse" name="adresse" type="text" placeholder="Adresse" class="form-control input-md">
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <div class="col-sm-3">
                            <input id="email" name="email" type="email" placeholder="Adresse Email" class="form-control input-md">
                        </div>

                        <!-- Téléphone -->
                        <div class="col-sm-3">
                            <input id="tel" name="tel" type="tel" placeholder="Téléphone" class="form-control input-md">
                        </div>
                    </div>

                    <!-- Code postal -->
                    <div class="form-group">
                        <div class="col-xs-6">
                            <input id="sujet" name="sujet" type="text" placeholder="Code postal puto" class="form-control input-md">
                        </div>
                    </div>

                    <!-- Message -->
                    <div class="form-group">
                        <div class="col-xs-6">
                            <textarea id="message" name="message" rows="5" placeholder="Message" class="form-control"></textarea>
                        </div>
                    </div>

                    <!-- Bouton d'Envoi -->
                    <div class="form-group">
                        <div class="col-xs-6">
                            <button type="submit" class="btn btn-primary" name="inscription" value="Je m'inscris">Envoyer ma Demande</button>
                        </div>
                    </div>

                </form>
            </div>

            <div class="col-sm-4">
                <img class="imgpoubelle" src="./assets/img/verre.jpg" alt="Card image cap"></div>
        </div>
    </div> <!-- /.row -->
    </div>
    </div>
</section>