{% extends 'layout.html.twig' %}
{% block page_title %} Créer un article{% endblock %}

{% block content %}
    <h1>Rédiger un nouvel article</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_row(form.titre) }}
    {{ form_row(form.chapo) }}
    {{ form_row(form.contenu) }}
    <button class="btn">{{ button_label|default('Créer') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('article_index') }}">Retour à la liste</a>

{% endblock %}
