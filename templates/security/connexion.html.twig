{% extends "layout.html.twig" %}

{% set active = 'connexion' %}
{% set active_link = 'login' %}
{% block page_title %} Connexion {% endblock %}

{% block content %}

    <main class="no-bg">
        <section id="connexion_form" class="animated fadeInLeftBig" >

            <div class="container" id="login_form" style="margin-top: 6%">

                <form action="{{ url('security_connexion') }}" class="form-signin" method="POST">
                    <h1 class="form-signin-heading" style="text-align: center; color: #3c8564">Connectez-vous</h1>

                    <input name="_username" type="text" class="form-control margin-top" id="EMAILAUTEUR" placeholder="Saississez votre email" required="" autofocus="" value="">
                    <input name="_password" type="password" class="form-control margin-top" placeholder="Entrez votre mot de passe" required="">

                    <input type="hidden" name="_target_path" value="/accueil" />
                    <div class="rounded mx-auto d-block margin-top">
                        <input id="signIn_Reset" class="btn btn-danger rounded mx-auto d-block bouton_lien margin-top" type="reset" value="Annuler">
                        <input  id="signIn_Validate" class="btn btn-success rounded mx-auto d-block bouton_lien margin-top" type="submit" value="Connexion">
                    </div>
                </form>

                <div class="sub_section_login">

                    <a href="{{url('security_forget')}}" class="text-center rounded mx-auto d-block margin-top">Mot de passe oubli√©</a>

                </div>

            </div>

        </section>
    </main>
{% endblock %}
